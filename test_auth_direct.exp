#!/usr/bin/expect -f
set timeout 30
set ip [lindex $argv 0]
set password [lindex $argv 1]

# Test direct connection to Authorization Service from server
set cmd "export KUBECONFIG=/etc/rancher/k3s/k3s.yaml; POD_IP=\$(kubectl get pod -n ess -l app.kubernetes.io/name=matrix-rtc-authorisation-service -o jsonpath='{.items\[0\].status.podIP}'); echo \"Pod IP: \$POD_IP\"; curl -v http://\$POD_IP:8080/sfu/get -X POST -H 'Content-Type: application/json' -d '{}' 2>&1 | head -30"

spawn ssh -o StrictHostKeyChecking=no root@$ip $cmd
expect {
    "password:" { send "$password\r"; exp_continue }
    eof
}
