#!/usr/bin/expect -f
set timeout 30
set ip [lindex $argv 0]
set password [lindex $argv 1]

# Check the MAS API to see if registration is enabled
set cmd "curl -s https://auth.gigglin.tech/.well-known/openid-configuration | grep -i registration"

spawn ssh -o StrictHostKeyChecking=no root@$ip $cmd
expect {
    "password:" { send "$password\r"; exp_continue }
    eof
}
