#!/usr/bin/expect -f
set timeout 30
set ip [lindex $argv 0]
set password [lindex $argv 1]

# Get logs from synapse-check-config job
set cmd "export KUBECONFIG=/etc/rancher/k3s/k3s.yaml; kubectl logs -n ess job/ess-synapse-check-config --tail=50"

spawn ssh -o StrictHostKeyChecking=no root@$ip $cmd
expect {
    "password:" { send "$password\r"; exp_continue }
    eof
}
